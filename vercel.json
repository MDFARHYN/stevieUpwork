{
    "version": 2,
    "builds": [
      {
        "src": "backend_django/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
      },
      {
        "src": "frontend_remix/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend_django/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend_remix/$1"
      }
    ]
  }